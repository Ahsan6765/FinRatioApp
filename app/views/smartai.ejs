<%- include('partials/header') %>

    <div class="smartai-wrapper">
        <!-- Hero Section -->
        <section class="smartai-hero">
            <div class="hero-content">
                <div class="hero-badge">AI-Powered Analysis</div>
                <h1>Market Intelligence <span class="text-gradient">Hub</span></h1>
                <p>Advanced predictive analytics and real-time market sentiment at your fingertips.</p>
            </div>
            <div class="hero-visual">
                <div class="glow-orb"></div>
                <div class="glow-orb secondary"></div>
            </div>
        </section>

        <!-- Main Dashboard Grid -->
        <div class="smartai-dashboard">

            <!-- Market Pulse (Full Width) -->
            <div class="glass-panel pulse-panel" id="market-overview">
                <div class="panel-header">
                    <h2><i class="fas fa-heartbeat"></i> Market Pulse</h2>
                    <div class="live-indicator"><span class="dot"></span> Live</div>
                </div>
                <div class="pulse-content">
                    <div class="sentiment-gauge-container">
                        <div class="sentiment-gauge"></div>
                    </div>
                    <div class="sentiment-summary"></div>
                </div>
            </div>

            <!-- Smart Signals (Left Column) -->
            <div class="glass-panel signals-panel" id="smart-signals">
                <div class="panel-header">
                    <h2><i class="fas fa-brain"></i> Smart Signals</h2>
                </div>
                <div class="signal-grid"></div>
            </div>

            <!-- Sector Analysis (Right Column) -->
            <div class="glass-panel sector-panel" id="sector-analysis">
                <div class="panel-header">
                    <h2><i class="fas fa-layer-group"></i> Sector Intelligence</h2>
                    <div class="controls">
                        <select id="sectorMetric" class="glass-select">
                            <option value="P/E">P/E Ratio</option>
                            <option value="momentum">Momentum</option>
                            <option value="marketCap">Market Cap</option>
                        </select>
                    </div>
                </div>
                <div class="sector-heatmap"></div>
                <div class="sector-insights"></div>
            </div>

            <!-- Predictions (Full Width) -->
            <div class="glass-panel prediction-panel" id="market-predictions">
                <div class="panel-header">
                    <h2><i class="fas fa-chart-line"></i> Predictive Analytics</h2>
                    <div class="controls">
                        <select id="predictionTimeframe" class="glass-select">
                            <option value="1d">24 Hours</option>
                            <option value="1w">1 Week</option>
                            <option value="1m">1 Month</option>
                        </select>
                    </div>
                </div>
                <div class="prediction-charts"></div>
            </div>

            <!-- Company Intelligence (Left Column) -->
            <div class="glass-panel company-panel" id="company-analyzer">
                <div class="panel-header">
                    <h2><i class="fas fa-building"></i> Company Deep Dive</h2>
                </div>
                <div class="search-box">
                    <input type="text" id="company-search-input" placeholder="Enter symbol (e.g., AAPL)...">
                    <button class="btn-glow">Analyze</button>
                </div>
                <div class="company-analysis"></div>
            </div>

            <!-- News Feed (Right Column) -->
            <div class="glass-panel news-panel" id="news-sentiment">
                <div class="panel-header">
                    <h2><i class="fas fa-newspaper"></i> News Impact</h2>
                    <div class="controls">
                        <select id="newsCategory" class="glass-select">
                            <option value="all">All News</option>
                            <option value="market">Market</option>
                            <option value="company">Company</option>
                            <option value="economic">Economy</option>
                        </select>
                    </div>
                </div>
                <div class="news-feed custom-scrollbar"></div>
            </div>

        </div>
    </div>

    <!-- Load Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Load D3.js -->
    <script src="https://d3js.org/d3.v7.min.js"></script>

    <!-- SmartAI Scripts -->
    <script src="/js/smartai/marketIntelligence.js"></script>
    <script src="/js/smartai/marketSentiment.js"></script>
    <script src="/js/smartai/sectorAnalysis.js"></script>
    <script src="/js/smartai/newsAnalysis.js"></script>
    <script src="/js/smartai/signals.js"></script>
    <script src="/js/smartai/companyIntelligence.js"></script>
    <script src="/js/smartai/predictions.js"></script>

    <%- include('partials/footer') %>