
<%- include('../partials/header', { title: title }) %>
<%- include('../partials/sidebar') %>
<main class="main-content container">
  <h1><%= title %></h1>
  <div class="card">
    <h3>Fetch company (DB/sample)</h3>
    <input id="ticker" placeholder="Enter ticker (e.g. FABL)" />
    <button id="btnFetch">Fetch</button>
    <div id="company-result" style="margin-top:12px"></div>
  </div>

  <div class="card" style="margin-top:16px">
    <h3>Manual Financials (enter values to calculate ratios)</h3>
    <form id="finForm">
      <div style="display:grid; grid-template-columns:repeat(2,1fr); gap:8px">
        <label>Revenue<input name="revenue" placeholder="e.g., 5000000000" /></label>
        <label>Net Income<input name="netIncome" placeholder="e.g., 600000000" /></label>
        <label>Total Assets<input name="totalAssets" placeholder="e.g., 15000000000" /></label>
        <label>Total Equity<input name="totalEquity" placeholder="e.g., 7000000000" /></label>
        <label>Current Assets<input name="currentAssets" placeholder="e.g., 4000000000" /></label>
        <label>Current Liabilities<input name="currentLiabilities" placeholder="e.g., 2000000000" /></label>
        <label>Inventory<input name="inventory" placeholder="e.g., 0" /></label>
        <label>COGS<input name="costOfGoodsSold" placeholder="e.g., 0" /></label>
        <label>EBIT<input name="ebit" placeholder="e.g., 800000000" /></label>
        <label>Interest Expense<input name="interestExpense" placeholder="e.g., 20000000" /></label>
        <label>Total Debt<input name="totalDebt" placeholder="e.g., 5000000000" /></label>
        <label>Shares Outstanding<input name="sharesOutstanding" placeholder="e.g., 250000000" /></label>
        <label>Market Price<input name="marketPrice" placeholder="e.g., 120" /></label>
      </div>
      <div style="margin-top:12px">
        <button type="button" id="btnCalc">Calculate Ratios</button>
      </div>
    </form>
    <div id="ratio-result" style="margin-top:12px"></div>
  </div>
</main>
<%- include('../partials/footer') %>
