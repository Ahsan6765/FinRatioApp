<%- include('partials/header') %>

<h2>P/E Valuation</h2>
<form method="POST" action="/calculate-pe" class="form-section">
  <label>Earnings Per Share (EPS):</label>
  <input type="number" name="eps" required>

  <label>P/E Ratio:</label>
  <input type="number" name="peRatio" required>

  <label>Current Market Price (optional):</label>
  <input type="number" name="marketPrice" step="0.01">

  <button type="submit">Calculate</button>
</form>

<% if (typeof result !== 'undefined') { %>
  <div class="result-box">
    <h3>Estimated Price (P/E): Rs <%= result %></h3>
    <% if (marketPrice) { %>
      <p>Market Price: Rs <%= marketPrice %></p>
      <% if (mos) { %>
        <p><strong>Margin of Safety:</strong> <%= mos %>%</p>
        <p class="<%= mos > 0 ? 'positive' : 'negative' %>">
          <%= mos > 0 ? 'Undervalued ✅' : 'Overvalued ❌' %>
        </p>
      <% } %>
    <% } %>
  </div>
<% } %>

<%- include('partials/footer') %>
