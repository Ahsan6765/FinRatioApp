<body>
    <header class="app-header">
        <div class="brand">
            <div class="logo">FR</div>
            <div>
                <h1>Financial Ratio Analyzer</h1>
                <div class="sub">CFA Professional Toolkit</div>
            </div>
        </div>
        <nav class="top-nav">
      <a href="/">Home</a>
      <a href="/liquidity">Liquidity</a>
      <a href="/profitability">Profitability</a>
      <a href="/leverage">Leverage</a>
