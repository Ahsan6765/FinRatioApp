    <div class="container">
        <aside class="sidebar">
            <h2>Valuation Modules</h2>
            <div class="menu">
                <button class="active">Discounted Cash Flow</button>
                <button onclick="window.location.href='/fcf'">Free Cash Flow</button>
            </div>
        </aside>

        <main class="app-main">
            <div class="page active">
                <div class="page-header">
                    <h2>Discounted Cash Flow (DCF) Calculator</h2>
                    <p class="muted">Estimate intrinsic value using future cash flows</p>
                </div>

                <div class="ratio-card">
                    <h3>Inputs</h3>
                    <div class="inputs">
                        <input type="number" id="fcf" placeholder="Free Cash Flow (Current Year)" />
                        <input type="number" id="growth" placeholder="Expected Growth Rate (%)" />
                        <input type="number" id="discount" placeholder="Discount Rate (%)" />
                        <input type="number" id="terminal" placeholder="Terminal Growth Rate (%)" />
                        <input type="number" id="years" placeholder="Projection Period (Years)" />
                    </div>

                    <div class="controls">
                        <button onclick="calculateDCF()">Calculate DCF Value</button>
                        <button onclick="resetDCF()">Reset</button>
                    </div>

                    <div class="output" id="dcfResult"></div>
                    <div class="insight-section" id="dcfInsight"></div>
                </div>
            </div>
        </main>
    </div>

