        <div class="grid">

          <!-- Current Ratio -->
          <div class="ratio-card">
            <h3>Current Ratio</h3>
            <div class="formula">Current Assets Ã· Current Liabilities</div>
            <div class="inputs">
              <input id="currentAssets" type="number" placeholder="Current Assets">
              <input id="currentLiabilities" type="number" placeholder="Current Liabilities">
              <div class="controls">
                <button onclick="calculateCurrentRatio()">Calculate</button>
                <button onclick="clearCurrent()">Clear</button>
              </div>
            </div>
            <div class="output" id="currentRatioResult"></div>
          </div>

          <!-- Quick Ratio -->
          <div class="ratio-card">
            <h3>Quick Ratio</h3>
            <div class="formula">(Current Assets âˆ’ Inventory) Ã· Current Liabilities</div>
            <div class="inputs">
              <input id="quickAssets" type="number" placeholder="Current Assets">
              <input id="inventory" type="number" placeholder="Inventory">
              <input id="quickLiabilities" type="number" placeholder="Current Liabilities">
              <div class="controls">
                <button onclick="calculateQuickRatio()">Calculate</button>
                <button onclick="clearQuick()">Clear</button>
              </div>
            </div>
            <div class="output" id="quickRatioResult"></div>
          </div>

          <!-- Cash Ratio -->
          <div class="ratio-card">
            <h3>Cash Ratio</h3>
            <div class="formula">Cash & Cash Equivalents Ã· Current Liabilities</div>
            <div class="inputs">
              <input id="cashEquivalents" type="number" placeholder="Cash & Equivalents">
              <input id="cashLiabilities" type="number" placeholder="Current Liabilities">
              <div class="controls">
                <button onclick="calculateCashRatio()">Calculate</button>
                <button onclick="clearCash()">Clear</button>
              </div>
            </div>
            <div class="output" id="cashRatioResult"></div>
          </div>

          <!-- Operating Cash Flow Ratio -->
          <div class="ratio-card">
            <h3>Operating Cash Flow Ratio</h3>
            <div class="formula">Operating Cash Flow Ã· Current Liabilities</div>
            <div class="inputs">
              <input id="operatingCashFlow" type="number" placeholder="Operating Cash Flow (annual)">
              <input id="ocfLiabilities" type="number" placeholder="Current Liabilities">
              <div class="controls">
                <button onclick="calculateOCFRatio()">Calculate</button>
                <button onclick="clearOCF()">Clear</button>
              </div>
            </div>
            <div class="output" id="ocfRatioResult"></div>
          </div>

        </div>

        <section class="insight-section">
          <h3>Interpretation</h3>
          <p id="liquidityInsight" class="muted">Calculated values appear above with a short CFA-style interpretation.
          </p>
        </section>
      </section>
